{% extends "app.html.twig" %}

{% block title %}
	{{ title }}
{% endblock %}

{% block content %}

<table  border="1" width="100%">
	<thead>
		<th>id</th>
		<th>nome</th>
		<th>endereco</th>
	</thead>
	<tbody>
		{% for pessoa in pessoas %}
			<tr>
				<td>{{ pessoa['id'] }}</td>
				<td>{{ pessoa['nome'] }}</td>
				<td>{{ pessoa['endereco'] }}</td>
			</tr>
		{% endfor %}
	</tbody>
</table>
{% endblock %}